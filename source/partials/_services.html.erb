<div id="servicos" class="section section-services">
  <div class="container">
    <div class="row">
      <div class="col-12 offset-md-1">
        <div class="section-header section-header">
          <h1>
            O que<br>oferecemos
            <span class="section-header-badge">
              <%= image_tag "section-services-badge.png" %>
            </span>
          </h1>
        </div>
      </div>
    </div>

    <div class="section-body">
      <div class="row align-items-center">
        <div class="col-12 col-md-7 col-lg-6 offset-lg-1">
          <nav class="nav nav-tabs services-listing" id="services-tab" role="tablist">
            <% index = 0 %>
            <% data.cms.services.each do |key, service| %>
              <% index = index + 1 %>
              <a class="service nav-item nav-link <%= index == 1 ? 'active' : '' %>" id="tab-<%= key %>-tab" data-toggle="tab" href="#<%= key %>" role="tab" aria-controls="<%= key %>" aria-selected="<%= index == 1 ? 'true' : 'false' %>">
                <div class="service-container">
                  <div class="service-icon">
                    <i class="<%= service.icon %>"></i>
                  </div>
                  <div class="service-title">
                    <%= service.title %>
                  </div>
                </div>
              </a>
            <% end -%>
          </nav>
        </div>
        <div class="col-12 col-md-5 col-lg-4">
          <div class="services-listing-detailed tab-content" id="services-tab-content">
            <% index = 0 %>
            <% data.cms.services.each do |key, service| %>
              <% index += 1 %>
              <div class="tab-pane fade <%= index == 1 ? 'active show' : ''  %>" id="<%= key %>" role="tabpanel" aria-labelledby="<%= key %>-tab" aria-selected="<%= index == 1 ? 'true' : 'false' %>">
                <div class="service">
                  <div class="service-icon">
                    <i class="<%= service.icon %>"></i>
                  </div>
                  <div class="service-title">
                    <%= service.title %>
                  </div>
                  <div class="service-description">
                    <%= service.description %>
                  </div>
                  <%= link_to "Tenho interesse!", "#contato", class: "btn btn-secondary service-cta anchor-link" %>
                </div>
              </div>
            <% end -%>
          </div>
        </div>
      </div>
    </div>

    <div class="section-footer">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">
          <span>NÃ£o encontrou o que procurava?</span>
          <%= link_to "Fale com a gente!", "#contato", class: "btn btn-yellow btn-sm ml-2 anchor-link" %>
        </div>
      </div>
    </div>
  </div>
</div>